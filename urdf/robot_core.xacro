<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- dimension de las piezas de robot -->
    <xacro:property name="ancho_r" value="0.005" />
    <xacro:property name="radio_r" value="0.014" />
    <xacro:property name="radio_e" value="0.01" />


    <!-- link para la odometria -->
    <link name="base_footprint">
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0"/>    
    </joint>

   

    <!-- base del robot -->
    <link name="base_link">
    </link>

    <joint name="base_link" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>    
    </joint>

    <!-- chassis link -->
    <link name="chassis">
        <visual>
            <origin xyz="0.0 0 0.0"/>
            <geometry>
                <mesh filename="file://$(find proyecto_myrobbie3)/meshes/chassis.dae"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file://$(find proyecto_myrobbie3)/meshes/chassis.dae"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass="0.32" x="0.12" y="0.08" z="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- left wheel joint -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.0283 0.0465 -0.0235" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>       
    </joint>

    <!-- left wheel link -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="${radio_r}" length="${ancho_r}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${radio_r}" length="${ancho_r}"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.04" length="${ancho_r}" radius="${radio_r}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- right wheel joint -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.0283 -0.0465 -0.0235" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>    
    </joint>

    <!-- right wheel link -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="${radio_r}" length="${ancho_r}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${radio_r}" length="${ancho_r}"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.04" length="${ancho_r}" radius="${radio_r}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <!-- caster wheel joint -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.05 0 -0.0275"/>  
    </joint>

    <!-- caster wheels -->
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${radio_e}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${radio_e}"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.03" radius="${radio_e}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- sensor tof -->
    <link name="laser_frame">
        <visual>
            <origin xyz="0.0 0 0.0"/>
            <geometry>
                <box size="0.04 0.04 0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.04 0.04 0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass="0.02" x="0.04" y="0.04" z="0.02">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <joint name="joint_chassis" type="fixed">
        <origin xyz="0.0 0.0 0.055" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="laser_frame"/>
    </joint>


    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value = "0.001" />
        <mu2 value = "0.001" />
    </gazebo>
    
</robot>